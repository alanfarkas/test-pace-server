<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>


  <groupId>com.ams.pace</groupId>
  <artifactId>pace-base</artifactId>
  <name>pace-base</name>
  <version>2.8.3.4</version>
  <packaging>jar</packaging> 
  <url>http://ams.pace-planning.com</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <localRepository>${user.home}/.m2/repository</localRepository>
    <clover.licenseLocation>/opt/clover/clover.license</clover.licenseLocation>
     <clover.database>${basedir}/clover/clover.db</clover.database>
     <clover.mergeDatabase>${basedir}/clover/cloverMerge.db</clover.mergeDatabase>
  </properties>

  	<build>
	 <plugins>
	   <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-compiler-plugin</artifactId>
	    <configuration>
	     <source>1.6</source>
	     <target>1.6</target>
	    </configuration>
	   </plugin>
	   <plugin>
	      <groupId>com.atlassian.maven.plugins</groupId>
	       <artifactId>maven-clover2-plugin</artifactId>
	       <version>3.1.4</version>
	       <configuration>
	          <licenseLocation>${clover.licenseLocation}</licenseLocation>
	  		  <cloverDatabase>${clover.database}</cloverDatabase>
	  		  <cloverMergeDatabase>${clover.mergeDatabase}</cloverMergeDatabase>
			  <singleCloverDatabase>true</singleCloverDatabase>
	      </configuration>
	      <executions>
	         <execution>
	          <phase>pre-site</phase>
	           <goals>
	             <goal>setup</goal>
	             <goal>instrument</goal>
	             <goal>aggregate</goal>
	             <goal>clover</goal>
	             <!--  
	             <goal>check</goal>
	             -->
	           </goals>
	         </execution>
	       </executions>
	      </plugin>
	  </plugins>
	</build>
	<reporting>
	  <plugins>
	    <plugin>
	      <groupId>com.atlassian.maven.plugins</groupId>
	      <artifactId>maven-clover-plugin</artifactId>
	      <configuration>
			<licenseLocation>${clover.licenseLocation}</licenseLocation>
			<cloverDatabase>${clover.database}</cloverDatabase>
			<cloverMergeDatabase>${clover.mergeDatabase}</cloverMergeDatabase>
	        <generateHTML>true</generateHTML>
	        <generatePdf>true</generatePdf>
	        <generateXml>true</generateXml>
	      </configuration>
	 	</plugin>
	  </plugins>
    </reporting>

  <issueManagement>
  	<system>Jira</system>
  	<url>http://ams.pace-planning.com/jira</url>
  </issueManagement>
